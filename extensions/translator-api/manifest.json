{
  "manifest_version": 3,
  "name": "Gemini Nano Translator API Demo",
  "version": "1.0.0",
  "description": "Demonstrates Gemini Nano Translator API for text translation",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gemini Nano Translator API"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}